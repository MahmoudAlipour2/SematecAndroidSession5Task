<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


   <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Application"
        android:textSize="25dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        android:background="#00FF80"
        android:layout_margin="20dp"
        android:padding="20dp"/>


    <TextView
        android:layout_below="@id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Hi User"
        android:layout_centerHorizontal="true"
        android:textColor="#000066"
        android:textStyle="bold"
        android:padding="5dp"
        android:background="#E5FFCC"
        />

<Button
    android:id="@+id/btnIntenttoLoginAct"
    android:layout_centerInParent="true"
    android:text="Login"
    android:shadowColor="@color/colorPrimary"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFB266"
/>

    <Button
        android:id="@+id/btnIntenttoRegisterAct"
        android:layout_centerInParent="true"
        android:text="Register"
        android:shadowColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnIntenttoLoginAct"
        android:background="#00cc66"
        android:layout_marginTop="10dp"
        />


</RelativeLayout>